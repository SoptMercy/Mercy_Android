<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.DigestiveFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_digestive"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <CheckBox
            android:id="@+id/cb_btn_digestive_first"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/grey_round_background"
            android:gravity="center"
            android:paddingVertical="13dp"
            android:text="구토"
            android:button="@android:color/transparent"
            android:textColor="@color/colorDarkBlack"
            app:layout_constraintBottom_toTopOf="@+id/cb_btn_digestive_second"
            app:layout_constraintTop_toTopOf="parent" />

        <CheckBox
            android:id="@+id/cb_btn_digestive_second"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/grey_round_background"
            android:gravity="center"
            android:paddingVertical="13dp"
            android:text="소화불량"
            android:button="@android:color/transparent"
            android:textColor="@color/colorDarkBlack"
            app:layout_constraintBottom_toTopOf="@+id/cb_btn_digestive_third"
            app:layout_constraintTop_toBottomOf="@+id/cb_btn_digestive_first" />

        <CheckBox
            android:id="@+id/cb_btn_digestive_third"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/grey_round_background"
            android:gravity="center"
            android:paddingVertical="13dp"
            android:text="설사"
            android:button="@android:color/transparent"
            android:textColor="@color/colorDarkBlack"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cb_btn_digestive_second"
            tools:layout_editor_absoluteX="32dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
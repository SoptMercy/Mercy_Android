<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.EtcFragment"
    android:background="#f7f6f8">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_etc"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <CheckBox
            android:id="@+id/cb_btn_etc_first"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_btn_background"
            android:elevation="2dp"
            android:gravity="center"
            android:paddingVertical="15dp"
            android:textSize="16sp"
            android:text="치통"
            android:button="@android:color/transparent"
            android:textColor="@color/colorDarkBlack"
            app:layout_constraintBottom_toTopOf="@+id/cb_btn_etc_second"
            app:layout_constraintTop_toTopOf="parent" />

        <CheckBox
            android:id="@+id/cb_btn_etc_second"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_btn_background"
            android:elevation="2dp"
            android:gravity="center"
            android:paddingVertical="15dp"
            android:textSize="16sp"
            android:text="오한"
            android:button="@android:color/transparent"
            android:textColor="@color/colorDarkBlack"
            app:layout_constraintBottom_toTopOf="@+id/cb_btn_etc_third"
            app:layout_constraintTop_toBottomOf="@+id/cb_btn_etc_first" />

        <CheckBox
            android:id="@+id/cb_btn_etc_third"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_btn_background"
            android:elevation="2dp"
            android:gravity="center"
            android:paddingVertical="15dp"
            android:textSize="16sp"
            android:text="멀미"
            android:button="@android:color/transparent"
            android:textColor="@color/colorDarkBlack"
            app:layout_constraintBottom_toTopOf="@id/cb_btn_etc_fourth"
            app:layout_constraintTop_toBottomOf="@+id/cb_btn_etc_second" />

        <CheckBox
            android:id="@+id/cb_btn_etc_fourth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_btn_background"
            android:elevation="2dp"
            android:gravity="center"
            android:paddingVertical="15dp"
            android:textSize="16sp"
            android:text="근육통"
            android:button="@android:color/transparent"
            android:textColor="@color/colorDarkBlack"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cb_btn_etc_third" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>